@model Cosu_MVC.Models.DTO.Image.ImageUploadRequestDTO
<div style="margin-top:20px;">
    <form asp-controller="Images" asp-action="UploadImage" method="post" enctype="multipart/form-data">
        <div class="form-group">
            <label for="file">Chọn ảnh : </label>
            <input type="file" id="file" name="File" class="form-control-file" accept="image/" required>
        </div>
        <div class="form-group">
            <label for="fileName">Tên ảnh : </label>
            <input type="text" id="fileName" name="FileName" class="form-control" required>
        </div>
        <div class="form-group">
            <label for="fileDescription">Mô tả : </label>
            <input id="fileDescription" name="FileDescription" class="form-control"></input>
        </div>
        <div class="form-group">
            <label for="albumId">Album : </label>
            <input type="number" id="albumId" name="AlbumId" class="form-control">
        </div>
        <div class="form-group">
            <button type="submit" class="btn btn-primary">Upload</button>
        </div>
    </form>
    <div>
        <a asp-action="ListImages">Trở lại danh sách</a>
    </div>
</div>


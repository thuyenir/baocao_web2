@model Cosu_MVC.Models.DTO.Image.ImageEditViewModel

@{
    ViewData["Title"] = "Edit Image";
}

<h1>Edit Image</h1>

@if (ViewBag.ErrorMessage != null)
{
    <div class="alert alert-danger" role="alert">
        @ViewBag.ErrorMessage
    </div>
}
<form asp-action="EditImage" method="post" enctype="multipart/form-data">
    <div class="form-group">
        <label asp-for="EditedImage.Name" class="control-label"></label>
        <input asp-for="EditedImage.Name" class="form-control" />
        <span asp-validation-for="EditedImage.Name" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="EditedImage.Description" class="control-label"></label>
        <textarea asp-for="EditedImage.Description" class="form-control"></textarea>
        <span asp-validation-for="EditedImage.Description" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="EditedImage.AlbumId" class="control-label"></label>
        <select asp-for="EditedImage.AlbumId" class="form-control" asp-items="@(new SelectList(Model.Albums, "Id", "Name"))">
            <option value="">-- Select Album --</option>
        </select>
        <span asp-validation-for="EditedImage.AlbumId" class="text-danger"></span>
    </div>
    <input type="submit" value="Save" class="btn btn-primary"/>
</form>
